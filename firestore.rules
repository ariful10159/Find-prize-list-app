rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all reads
    match /{document=**} {
      allow read: if true;
    }
    
    // Products collection - admin can write
    match /products/{productId} {
      allow read: if true;
      allow write: if true;
    }
    // Excel files collection - allow read and write
    match /excel_files/{fileId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}